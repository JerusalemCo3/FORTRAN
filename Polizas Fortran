      program Polizas
        implicit none
       
        integer tipo, edad, lentes, enfermo, bebe
        real costom, costoed, costos, costo, costob, costoe
       
        print *
        write (*,*)'Tipo de poliza 1=A Y 0=B'
        read (*,*)tipo
        
       
        print *
        write (*,*)'Bebe alcohol? 1=si y 0=no'
        read (*,*)bebe
       
        print *
        write (*,*)'Usa lentes? 1=si y 0=no'
        read (*,*)lentes
       
        print *
        write (*,*)'Padece de una enfermedad? 1=si y 0=no'
        read (*,*)enfermo
       
        print *
        write (*,*)'Ingrese su edad: '
        read (*,*)edad
       
        select case (tipo)
               case (1)
                costo = 1200
               case (2)
                costo=950
        end select
       
        if (lentes==1)then
           costos=0.05*costo
        else
            costos=0
        end if
       
        if (bebe==1)then
           costob =0.10*costo
        else
            costob=0
        end if
       
        if (enfermedad ==1)then
           costoe =0.05*costo
        else
            costoe=0
        end if
       
        if (edad>40)then
           costoed =0.20*costo
        else
            costoed=0
        end if
       
        costom = costo + costos + costob + costoe + costoed

        print *
        write(*,*) 'Costo total: ', costom
        
        stop

     end program Polizas


       
